@page "/signup"
@layout AuthenticationLayout
<PageTitle Title="My Stocks - Sign Up"/>

<div>
    <p class="pt-10 text-light-secondary-300 font-ubuntu font-bold text-2xl" align="center">Sign up</p>
    <form class="pt-10">
      <input class="input" type="text" align="center" placeholder="Username@gmail.com">
      <input class="input" type="password" align="center" placeholder="Password">
      <input class="input" type="password" align="center" placeholder="Confirm">
      <a class="submit" align="center">Next</a>
      <p class="flex justify-center pt-6 text-base"><a class="text-light-tint sup-button pb-5" href="/signin">Sign in instead</a></p>
    </form>
</div>